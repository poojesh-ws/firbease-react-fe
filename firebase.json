{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "src",
        "tsconfig.dev.json",
        "tsconfig.json",
        "webpack.config.js",
        "*.log",
        "/lib/*.txt"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "runtime": "nodejs16"
    }
  ],
  "firestore": {
    "rules": "./firestore/firestore.rules",
    "indexes": "./firestore/firestore.indexes.json"
  }
}
