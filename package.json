{
  "name": "react-firebase-monorepo",
  "description": "A React firebase monorepo setup poc",
  "version": "1.0.0",
  "engines": {
    "npm": ">=5",
    "node": ">=8.15.1"
  },
  "private": "true",
  "scripts": {
    "start:web": "cd web && yarn start",
    "test:web": "cd web && yarn test",
    "lint:eslint:web:fix": "cd web && yarn run lint:eslint:fix",
    "lint:staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poojesh-ws/firbease-react-fe.git"
  },
  "workspaces": [
    "web",
    "functions"
  ],
  "keywords": [],
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "npm run lint:eslint:web:fix",
      "git add --force",
      "jest --findRelatedTests $STAGED_FILES"
    ],
    "*.{ts,tsx}": [
      "./internals/scripts/tsc-lint.sh"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "pre-commit": "lint:staged",
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/poojesh-ws/firbease-react-fe/issues"
  },
  "homepage": "https://github.com/poojesh-ws/firbease-react-fe#readme",
  "dependencies": {
    "lint-staged": "^13.2.0",
    "pre-commit": "^1.2.2"
  }
}
